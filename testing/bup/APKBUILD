# Maintainer: Adam Ruzicka <a.ruzicka@outlook.com>
pkgname=bup
pkgver=0.29.2
pkgrel=0
pkgdesc="A program that backs things up."
url="https://bup.github.io/"
arch="all"
license="LGPL-2.0-only"
depends="python2 py-libacl py2-xattr py2-tornado"
makedepends="bash coreutils perl python-dev rsync tzdata"
source="$pkgname-$pkgver.tar.gz::https://github.com/$pkgname/bup/archive/$pkgver.tar.gz"

build() {
	./configure
	make
}

package() {
	make DESTDIR="${pkgdir}" PREFIX=/usr install
}

check() {
	make test
}

sha512sums="10c433d6779b1fd7e1935c587676492d96a330dc3280556332bb55b6e5c62de8631fd755d07d2eaf80cb9fa209dc25b241d5ecf3a6fe2b8210a3d0e1ce4fa4bf  bup-0.29.2.tar.gz"
