# Maintainer: Adam Ruzicka <a.ruzicka@outlook.com>
pkgname=py-xattr
_pkgname=pyxattr
pkgver=0.6.0
pkgrel=0
pkgdesc="A python module for manipulating extended attributes"
url="https://pyxattr.k1024.org/"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="python2-dev attr-dev py-setuptools python3-dev"
install=""
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://pyxattr.k1024.org/downloads/pyxattr-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1
}

check() {
	cd "$builddir"
	python2 setup.py test || return 1
	python3 setup.py test || return 1
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir" || return 1
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

sha512sums="c56bf57729b5f8c8e3e19e29fd903b7365c6644abe3dcebf57ffc2f97a1e92d0e22cdc0a967c5abee3a74ba61a2a379e31a1734f45449095bdb7895b8357a9bb  pyxattr-0.6.0.tar.gz"
