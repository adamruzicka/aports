# Maintainer: Adam Ruzicka <a.ruzicka@outlook.com>
pkgname=py-xattr
_pkgname=pyxattr
pkgver=0.6.0
pkgrel=0
pkgdesc="A python module for manipulating extended attributes"
url="https://pyxattr.k1024.org/"
arch="all"
license="GPL"
depends="python2"
depends_dev=""
makedepends="python2-dev attr-dev"
install=""
subpackages=""
source="https://pyxattr.k1024.org/downloads/pyxattr-$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
build() {
	cd "$_builddir"
	python2 setup.py build || return 1
}

package() {
	cd "$_builddir"
	python2 setup.py install --root="$pkgdir" || return 1
}

sha512sums="c56bf57729b5f8c8e3e19e29fd903b7365c6644abe3dcebf57ffc2f97a1e92d0e22cdc0a967c5abee3a74ba61a2a379e31a1734f45449095bdb7895b8357a9bb  pyxattr-0.6.0.tar.gz"
